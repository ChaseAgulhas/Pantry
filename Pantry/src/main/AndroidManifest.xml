<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chase.apps.pantry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.user.UserMenu" />
        <activity android:name=".activity.user.AddUser" />
        <activity android:name=".activity.user.PreviewUser" />
        <activity android:name=".activity.user.UpdateUser" />
        <activity android:name=".activity.user.ViewUser" />
        <activity android:name=".activity.user.DeleteUser"></activity>
    </application>

</manifest>